@model IEnumerable<CorporateWebSite__MVC.Models.Model.Admin>

@{
    ViewBag.Title = "Adminler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Adminler</h2>

<p>
    @Html.ActionLink("Yeni Yönetici Oluştur", "AdminCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.eposta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sifre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.yetki)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.eposta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sifre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.yetki)
        </td>
        <td>
            <div class="btn-group">
                <a class="btn btn-success" href="/Admin/Edit/@item.adminId/"><i class="icon_check_alt2"></i> Güncelle</a>
                <a class="btn btn-danger" href="/Admin/Delete/@item.adminId/"><i class="icon_close_alt2"></i> Sil</a>
            </div>
        </td>
    </tr>
}

</table>

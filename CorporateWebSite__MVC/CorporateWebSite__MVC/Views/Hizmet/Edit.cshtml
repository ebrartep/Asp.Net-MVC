@model CorporateWebSite__MVC.Models.Model.Hizmet
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmet Düzenle</h2>


<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>


<div class="form">
    <form class="form-validate form-horizontal " id="register_form" method="post" action="/Hizmet/Edit/@Model.hizmetId" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="hizmetBaslik" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class=" form-control" id="hizmetBaslik" name="hizmetBaslik" value="@Model.hizmetBaslik" type="text" />
            </div>
        </div>
        <div class="form-group ">
            <label for="hizmetAciklama" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="hizmetAciklama" required class="ckeditor">@Model.hizmetAciklama</textarea>
            </div>
        </div>

        <div class="form-group ">
            <label for="hizmetResimURL" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <img src="@Model.hizmetResimURL" height="100" width="100" />

            </div>
        </div>
        <div class="form-group ">
            <label for="hizmetResimURL" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input class="form-control" type="file" name="hizmetResimURL" accept=".jpg,.png,.jpeg" />


            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-default" type="button"><a href="/Hizmet/Index">İptal</a></button>
            </div>
        </div>
    </form>
</div>


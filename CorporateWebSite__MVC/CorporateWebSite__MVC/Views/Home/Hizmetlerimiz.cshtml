@model IEnumerable<CorporateWebSite__MVC.Models.Model.Hizmet>
@{
    ViewBag.Title = "Hizmetlerimiz";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}


    <section id="inner-headline">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                        <li class="active"><h4>Hizmetlerimiz</h4></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @*<ul class="portfolio-categ filter">
                        <li class="all active"><a href="#">All</a></li>
                        <li class="web"><a href="#" title="">Web design</a></li>
                        <li class="icon"><a href="#" title="">Icons</a></li>
                        <li class="graphic"><a href="#" title="">Graphic design</a></li>
                    </ul>*@
                <div class="clearfix">
                </div>
                <div class="row">
                    <section id="projects">
                        <ul id="thumbs" class="portfolio">
                            @foreach (var item in Model)
                            {
                                <!-- Item Project and Filter Name -->
                                <li class="item-thumbs col-lg-3 design" data-id="id-0" data-type="web">
                                    <!-- Fancybox - Gallery Enabled - Title - Full Image -->
                                    <a class="hover-wrap fancybox" data-fancybox-group="gallery" title="@item.hizmetBaslik" href="@item.hizmetResimURL">
                                        <span class="overlay-img">@item.hizmetBaslik</span>
                                        <span class="overlay-img-thumb font-icon-plus">@Html.Raw(item.hizmetAciklama)</span>
                                    </a>
                                    <!-- Thumb Image and Description -->
                                    <img src="@item.hizmetResimURL" alt="@Html.Raw(item.hizmetAciklama)">
                                </li>
                            }
                        </ul>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>



@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fa fa-connectdevelop"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active"><h4>İletişim</h4></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d49317.655880846076!2d29.95202141849025!3d39.416130260440625!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14c948171562e423%3A0x7357c4e7ede1b93c!2zS8O8dGFoeWEsIEvDvHRhaHlhIE1lcmtlei9Lw7x0YWh5YQ!5e0!3m2!1str!2str!4v1604955865794!5m2!1str!2str" width="100%" height="380" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-offset-2">
                <h4>Aşağıdaki formu doldurarak <strong>bizimle iletişime geçebilirsiniz!</strong></h4>

                <div class="alert alert-primary">@ViewBag.Uyari</div>
                <form action="/Iletisim/" method="post" role="form" class="contactForm">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <input type="text" name="adsoyad" class="form-control" id="name" placeholder="Adınız ve Soyadınız" required data-rule="minlen:4" data-msg="Lütfen en az 4 karakter giriniz..." />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Mail Adresiniz" required data-rule="email" data-msg="Lütfen mail adresinizi giriniz..." />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="konu" id="subject" placeholder="Konu" data-rule="minlen:4" required />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="mesaj" rows="5" data-rule="required" required data-msg="Lütfen mesajınızı giriniz..." placeholder="Mesaj"></textarea>
                        <div class="validation"></div>
                    </div>

                    <div><button type="submit" class="btn btn-theme">Gönder</button></div>
                </form>
            </div>
        </div>
    </div>
</section>


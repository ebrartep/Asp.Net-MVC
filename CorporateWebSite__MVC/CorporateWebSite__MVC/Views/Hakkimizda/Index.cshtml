@model IEnumerable<CorporateWebSite__MVC.Models.Model.Hakkimizda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımızda</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.hakkimizdaAciklama)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>


            @Html.Raw(item.hakkimizdaAciklama)
        </td>
        <td>
            @Html.ActionLink("Güncelleme", "Edit", new { id=item.hakkimizdaId }) 
           
        </td>
    </tr>
}

</table>
